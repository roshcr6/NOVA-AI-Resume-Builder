# Backend Environment Variables
PORT=5000
MONGODB_URI=mongodb://localhost:27017/nova-resume

# Ollama Configuration (Local LLM)
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2

# GitHub API Token (Optional - increases rate limit from 60 to 5000 requests/hour)
# Get your token at: https://github.com/settings/tokens (create with 'public_repo' scope)
GITHUB_TOKEN=your_github_token_here

# Gemini (optional - not used when Ollama is configured)
GEMINI_API_KEY=your_gemini_api_key
ADZUNA_APP_ID=your_adzuna_app_id
ADZUNA_API_KEY=your_adzuna_api_key
FRONTEND_URL=http://localhost:5173
NODE_ENV=development

# Email Configuration (for Nodemailer preview)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
